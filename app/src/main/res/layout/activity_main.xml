<?xml version="1.0" encoding="utf-8"?>
<com.alxgrk.myownadventcalendar.views.ZoomableViewGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/zoomable_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alxgrk.myownadventcalendar.MainActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/description_background"
        android:scaleType="fitXY" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <!-- first row -->

        <com.alxgrk.myownadventcalendar.views.DoorView
            android:id="@+id/door1"
            style="@style/DoorViewStyle"
            app:color="@color/colorAccent"
            app:number="4" />

        <com.alxgrk.myownadventcalendar.views.DoorView
            android:id="@+id/door2"
            style="@style/OthersInRow"
            android:layout_alignTop="@id/door1"
            android:layout_toEndOf="@id/door1"
            app:color="@color/colorAccent"
            app:number="12" />

        <com.alxgrk.myownadventcalendar.views.DoorView
            android:id="@+id/door3"
            style="@style/OthersInRow"
            android:layout_alignTop="@id/door1"
            android:layout_toEndOf="@id/door2"
            app:color="@color/colorAccent"
            app:number="16" />

        <com.alxgrk.myownadventcalendar.views.DoorView
            android:id="@+id/door4"
            style="@style/OthersInRow"
            android:layout_alignTop="@id/door1"
            android:layout_toEndOf="@id/door3"
            app:color="@color/colorAccent"
            app:number="2" />

        <!-- second row -->

        <com.alxgrk.myownadventcalendar.views.DoorView
            android:id="@+id/door5"
            style="@style/FirstInRow"
            android:layout_below="@id/door1"
            app:color="@color/colorAccent"
            app:number="6" />

        <com.alxgrk.myownadventcalendar.views.DoorView
            android:id="@+id/door6"
            style="@style/OthersInRow"
            android:layout_alignTop="@id/door5"
            android:layout_toEndOf="@id/door5"
            app:color="@color/colorAccent"
            app:number="19" />

        <com.alxgrk.myownadventcalendar.views.DoorView
            android:id="@+id/door7"
            style="@style/OthersInRow"
            android:layout_alignTop="@id/door5"
            android:layout_toEndOf="@id/door6"
            app:color="@color/colorAccent"
            app:number="23" />

        <com.alxgrk.myownadventcalendar.views.DoorView
            android:id="@+id/door8"
            style="@style/OthersInRow"
            android:layout_alignTop="@id/door5"
            android:layout_toEndOf="@id/door7"
            app:color="@color/colorAccent"
            app:number="15" />

        <!-- third row -->

        <com.alxgrk.myownadventcalendar.views.DoorView
            android:id="@+id/door9"
            style="@style/FirstInRow"
            android:layout_below="@id/door5"
            android:layout_marginTop="50dp"
            app:color="@color/colorAccent"
            app:number="1" />

        <com.alxgrk.myownadventcalendar.views.DoorView
            android:id="@+id/door10"
            style="@style/OthersInRow"
            android:layout_below="@id/door5"
            android:layout_toEndOf="@id/door9"
            android:layout_marginTop="30dp"
            app:color="@color/colorAccent"
            app:number="13" />

        <com.alxgrk.myownadventcalendar.views.DoorView
            android:id="@+id/door11"
            style="@style/OthersInRow"
            android:layout_alignTop="@id/door10"
            android:layout_toEndOf="@id/door10"
            app:color="@color/colorAccent"
            app:number="21" />

        <com.alxgrk.myownadventcalendar.views.DoorView
            android:id="@+id/door12"
            style="@style/OthersInRow"
            android:layout_alignTop="@id/door9"
            android:layout_toEndOf="@id/door11"
            app:color="@color/colorAccent"
            app:number="3" />

        <!-- forth row - different to others-->

        <com.alxgrk.myownadventcalendar.views.DoorView
            android:id="@+id/door15"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/door10"
            android:layout_centerHorizontal="true"
            app:color="@color/colorAccent"
            app:number="24"/>

        <com.alxgrk.myownadventcalendar.views.DoorView
            android:id="@+id/door13"
            style="@style/DoorViewStyle"
            android:layout_alignTop="@id/door15"
            android:layout_alignStart="@id/door15"
            android:layout_marginTop="40dp"
            android:layout_marginStart="190dp"
            app:color="@color/colorAccent"
            app:number="9" />

        <com.alxgrk.myownadventcalendar.views.DoorView
            android:id="@+id/door14"
            style="@style/DoorViewStyle"
            android:layout_alignTop="@id/door15"
            android:layout_alignStart="@id/door15"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            app:color="@color/colorAccent"
            app:number="7" />

        <com.alxgrk.myownadventcalendar.views.DoorView
            android:id="@+id/door16"
            style="@style/DoorViewStyle"
            android:layout_below="@id/door15"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            app:color="@color/colorAccent"
            app:number="5" />


        <!-- fifth row -->

        <com.alxgrk.myownadventcalendar.views.DoorView
            android:id="@+id/door17"
            style="@style/DoorViewStyle"
            android:layout_below="@id/door16"
            android:layout_marginTop="-10dp"
            app:color="@color/colorAccent"
            app:number="8" />

        <com.alxgrk.myownadventcalendar.views.DoorView
            android:id="@+id/door18"
            style="@style/OthersInRow"
            android:layout_alignTop="@id/door17"
            android:layout_toEndOf="@id/door17"
            android:layout_marginTop="20dp"
            app:color="@color/colorAccent"
            app:number="11" />

        <com.alxgrk.myownadventcalendar.views.DoorView
            android:id="@+id/door19"
            style="@style/OthersInRow"
            android:layout_alignTop="@id/door18"
            android:layout_toEndOf="@id/door18"
            app:color="@color/colorAccent"
            app:number="14" />

        <com.alxgrk.myownadventcalendar.views.DoorView
            android:id="@+id/door20"
            style="@style/OthersInRow"
            android:layout_alignTop="@id/door17"
            android:layout_toEndOf="@id/door19"
            app:color="@color/colorAccent"
            app:number="18" />

        <!-- forth row -->

        <com.alxgrk.myownadventcalendar.views.DoorView
            android:id="@+id/door21"
            style="@style/FirstInRow"
            android:layout_below="@id/door18"
            app:color="@color/colorAccent"
            app:number="20" />

        <com.alxgrk.myownadventcalendar.views.DoorView
            android:id="@+id/door22"
            style="@style/OthersInRow"
            android:layout_alignTop="@id/door21"
            android:layout_toEndOf="@id/door21"
            app:color="@color/colorAccent"
            app:number="17" />

        <com.alxgrk.myownadventcalendar.views.DoorView
            android:id="@+id/door23"
            style="@style/OthersInRow"
            android:layout_alignTop="@id/door21"
            android:layout_toEndOf="@id/door22"
            app:color="@color/colorAccent"
            app:number="10" />

        <com.alxgrk.myownadventcalendar.views.DoorView
            android:id="@+id/door24"
            style="@style/OthersInRow"
            android:layout_alignTop="@id/door21"
            android:layout_toEndOf="@id/door23"
            app:color="@color/colorAccent"
            app:number="22" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/start_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

</com.alxgrk.myownadventcalendar.views.ZoomableViewGroup>
